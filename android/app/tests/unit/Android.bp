package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test {
    name: "BluetoothInstrumentationTests",

    // We only want this apk build for tests.
    certificate: ":com.android.bluetooth.services.certificate",

    libs: [
        "javax.obex",
        "android.test.runner",
        "telephony-common",
        "libprotobuf-java-micro",
        "android.test.base",
        "android.test.mock",
    ],

    static_libs: [
        "androidx.test.ext.truth",
        "androidx.test.rules",
        "androidx.test.espresso.intents",
        "androidx.room_room-migration",
        "androidx.room_room-runtime",
        "androidx.room_room-testing",
        "gson",
        "mockito-target",
        "truth-prebuilt",
        "PlatformProperties"
    ],

    asset_dirs: ["src/com/android/bluetooth/btservice/storage/schemas"],

    // Include all test java files.
    srcs: ["src/**/*.java"],

    platform_apis: true,

    test_suites: [
        "device-tests",
        "mts-bluetooth",
    ],

    instrumentation_for: "Bluetooth",
    enabled: false,

}
